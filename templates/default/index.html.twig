{% extends 'base.html.twig' %}

{% block title %}timln - Dashboard{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="mt-4">Dashboard</h1>
        <div class="row">
            <div class="col-sm-4">
                <div class="card text-center">
                    <div class="card-header">Statistik</div>
                    <div class="card-body">
                        <span class="font-weight-bold pt-2 mb-3">Arbeitszeitkonto: +8 h</span>
                        <hr>
                        {{ render_chart(vacation) }}
                        <span class="font-weight-bold pt-2">Resturlaub: 12 von 30 verfügbar</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card text-center">
                    <div class="card-header">Calendar</div>
                    <div class="card-body">
                        <div id='calendar'></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card text-center">
                    <div class="card-header">Aktionen</div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="Beginn">
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="Ende">
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="Besonderheit">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col">
                                    <button class="btn btn-primary btn-block">Senden</button>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col">
                                    <button class="btn btn-primary">Urlaub beantragen</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <h2 class="mt-3 mb-3">Letzte Einträge Arbeitszeitkonto</h2>
        <div class="row">
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead>
                        <tr>
                            <th scope="col">Datum</th>
                            <th scope="col">Beginn</th>
                            <th scope="col">Ende</th>
                            <th scope="col">Arbeitszeit</th>
                            <th scope="col">Besonderheit</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>11.12.2020</td>
                            <td>08:10</td>
                            <td>16:40</td>
                            <td>8 h</td>
                            <td>AOF</td>
                        </tr>
                        <tr>
                            <td>10.12.2020</td>
                            <td>08:30</td>
                            <td>14:30</td>
                            <td>6 h</td>
                            <td>AOF</td>
                        </tr>
                        <tr>
                            <td>10.12.2020</td>
                            <td>18:30</td>
                            <td>20:30</td>
                            <td>2 h</td>
                            <td>AOF</td>
                        </tr>
                        <tr>
                            <td>09.12.2020</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Krank</td>
                        </tr>
                        <tr>
                            <td>08.12.2020</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Urlaub</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

